\newcommand{\cvblock}[4]{
    \makebox[\linewidth][c]{
        \parbox[l]{0.5\linewidth}{
            {{\large\color{emphasis}#1}\par
            \smallskip
            \textbf{\color{accent}#2}}\par
            \smallskip
        }
        \makebox[0.5\linewidth][c]{
            \small
            \begin{minipage}{0.2\linewidth}
                \raggedright \faCalendar \hspace{0.5em}#3
            \end{minipage}
            %\parbox[r]{0.3\linewidth}{\faCalendar \hspace{0.5em}#3}%
            \ifstrequal{#4}{}{}{\parbox[r]{0.2\linewidth}{\faMapMarker\hspace{0.5em}#4}}\par
        }
    }
}

\newcommand{\cvskillblock}[2]{
    \makebox[\linewidth][c]{
